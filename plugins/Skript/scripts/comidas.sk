# /itemlore add &7Hecho en Lomas Turbas

# Pan de masa madre -------------------------------------------------------------------------
on consume of bread:
    if name of player's tool contains "&e&lPan de masa madre":
        apply regeneration 2 to player for 10 seconds
        apply absorption 2 to player for 120 seconds
        apply resistance 2 to player for 60 seconds
        # Estadisticas
        load yaml "plugins/Skript/data/estadisticas.yml" as "estadisticas"
        #------------
        set {_usos} to yaml value "itemsop.panmadre.total" from "estadisticas"
        if {_usos} is not set:
            set {_usos} to 0
        add 1 to {_usos}
        set yaml value "itemsop.panmadre.total" from "estadisticas" to {_usos}
        #------------
        set {_player} to player
        set {_usosplayer} to yaml value "itemsop.panmadre.%{_player}%" from "estadisticas"
        if {_usosplayer} is not set:
            set {_usosplayer} to 0
        add 1 to {_usosplayer}
        set yaml value "itemsop.panmadre.%{_player}%" from "estadisticas" to {_usosplayer}
        #------------
        wait 1 tick
        save yaml "estadisticas"


