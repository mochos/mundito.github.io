on projectile hit:
	if name of shooter's tool contains "&7&lLanzacohetes":
		if {arcosop.%shooter%} is true:
			message "&cDebes esperar a que se recargue el arco." to shooter
			stop
		else:
			#create an explosion of force 10 at the projectile
			create a fake explosion at the projectile
			loop players in radius 3 of projectile:
				damage loop-player by 5 hearts
				push the loop-player upwards at speed 1.5
			set {arcosop.%shooter%} to true
			message "Regargando arco..." to shooter
			wait 10 seconds
			set {arcosop.%shooter%} to false
			message "&aArco recargado" to shooter
			stop
	if name of shooter's tool contains "&7&lCegador":
		if {arcosop.%shooter%} is true:
			message "&cDebes esperar a que se recargue el arco." to shooter
			stop
		else:
			loop players in radius 1 of projectile:
				apply blindness to loop-player for 15 seconds
				apply slowness to loop-player for 15 seconds
			set {arcosop.%shooter%} to true
			message "Regargando arco..." to shooter
			wait 10 seconds
			set {arcosop.%shooter%} to false
			message "&aArco recargado" to shooter
			stop
	if name of shooter's tool contains "&7&lTractor":
		if {arcosop.%shooter%} is true:
			message "&cDebes esperar a que se recargue el arco." to shooter
			stop
		else:
			loop players in radius 1 of projectile:
				teleport loop-player in front of the shooter's head
			set {arcosop.%shooter%} to true
			message "Regargando arco..." to shooter
			wait 10 seconds
			set {arcosop.%shooter%} to false
			message "&aArco recargado" to shooter
			stop

