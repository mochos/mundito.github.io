#---------   No reparar   ---------#
on command "/repair":
	if player don't have the permission "skript.admin":
		if name of player's tool contains "&7&lLanzacohetes" or "&7&lCegador" or "&7&lTractor":
			cancel event
			message "&cNo puedes reparar esta herramienta."

#---------   No encantar   ---------#
on enchant:  
	if name of event-item contains "&7&lLanzacohetes" or "&7&lCegador" or "&7&lTractor":
		cancel event
		message "&cNo puedes encantar esta herramienta."