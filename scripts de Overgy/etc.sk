# Evita acceder al inventario de admins.
on command "/invsee":
	if "%arguments%" contains "lorspi","PantallazoAzul" or "SN_Rosuor":
		player don't have the permission "skript.admin"
		cancel the event
		send "&c¡No tienes acceso a eso!"
		wait 20 ticks
		log "%player% trató de acceder al inventario de %arguments%" to "accesos"
		stop

# Hacer log cuando alguien intenta /kit
on command "/kit":
	if "%executor%" contains "CONSOLE":
		stop
	else:
		log "%executor% usó /kit %arguments%" to "givenKits"
		stop

