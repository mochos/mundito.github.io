# Evita caer y morir al deshabilitar vuelo en pleno vuelo.
on command "/fly":
	player is flying
	execute console command "/tp %player% %player%"
	message "&aFuiste llevado a tierra firme." to player
	stop

# Espiar comandos
on command:
	if "%command%" is not "msg","r" or "m":
		if "%player%" is "<none>" or "PantallazoAzul":
			stop
		else:
			set {_comando} to "&7%player% -> /%complete command%"
			wait 2 ticks
			loop all players:
				if loop-player has permission "skript.spy":
					if loop-player is "PantallazoAzul":
						send "%{_comando}%" to loop-player
			stop
	else:
		stop

# Evita acceder a las homes de admins.
on command "/home lorspi:":
	player don't have the permission "skript.admin"
	cancel the event
	send "&c¡No tienes acceso a eso!"
	wait 20 ticks
	log "%player% trató de viajar al home %arguments% de lorspi" to "accesos"
	execute console command "/mail send lorspi %player% trató de ir a tu home."
	stop

