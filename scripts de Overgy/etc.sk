# Comando /spawn para ir a tierramedia
command /enderchestver [<player=%player%>]:
	aliases: /verenderchest, /verec, /ecver
	permission: "skript.admin"
	trigger:
		open the arg 1's ender chest to the player
		stop

on player teleport:
	wait 5 ticks
	player is in "test"
	player don't have the permission "skript.admin"
	log "%player% entró a %world%" to "accesos"
	execute console command "/mail send lorspi %player% entró a test"
	stop


#Auditoría de movivientos con ceitiles
command /cambioceitil <text>:
	executable by: console
	trigger:
		log "%arg 1% cambió un ceitil por 5 fichas" to "ceitiles"
		stop

command /vendioceitil <text>:
	executable by: console
	trigger:
		log "%arg 1% vendió un ceitil por $400,000" to "ceitiles"
		stop


on break of mob spawner:
	if player has the permission "spawner.mine.all":
		#damage tool by 2000
		play raw sound "random.break" at player with pitch 1 volume 7
		wait 1 tick
		disenchant the player's tool 
		stop

