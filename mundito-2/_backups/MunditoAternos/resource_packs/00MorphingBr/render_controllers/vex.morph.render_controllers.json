{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.morph.vex.first_person": {
      "arrays": {
        "textures": {
          "Array.textures": [ "Texture.vex", "Texture.vex_charging" ]
        }
      },
      "geometry": "Geometry.vex",
      "materials": [ { "*": "Material.vex" } ],
      "textures": [ "Array.textures[query.is_charging]" ],
      "ignore_lighting": true,
      "part_visibility": [
        { "*": false },
        { "rightArm": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
        { "leftArm": "query.get_equipped_item_name(1, 1) == '' || query.get_equipped_item_name(1, 1) == 'filled_map'" }
      ]
    },
    "controller.render.morph.vex.third_person": {
      "arrays": {
        "textures": {
          "Array.textures": [ "Texture.vex", "Texture.vex_charging" ]
        }
      },
      "geometry": "Geometry.vex",
      "materials": [ { "*": "Material.vex" } ],
      "textures": [ "Array.textures[query.is_charging]" ],
      "ignore_lighting": true
    }
  }
}
