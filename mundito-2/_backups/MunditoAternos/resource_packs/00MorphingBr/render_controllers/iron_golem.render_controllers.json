{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.morph.iron_golem.first_person": {
      "geometry": "Geometry.iron_golem",
      "materials": [ { "*": "Material.iron_golem" } ],
      "textures": [ "Texture.iron_golem" ],
      "part_visibility": [
        { "*": false },
        { "arm0": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
        { "arm1": "(query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0))" }
      ]
    },
    "controller.render.morph.iron_golem.third_person": {
      "geometry": "Geometry.iron_golem",
      "materials": [ { "*": "Material.iron_golem" } ],
      "textures": [ "Texture.iron_golem" ]
    },
    "controller.render.morph.iron_golem_cracks.first_person": {
      "arrays": {
        "textures": {
          "Array.cracks": [
            "Texture.iron_golem_cracked_high",
            "Texture.iron_golem_cracked_med",
            "Texture.iron_golem_cracked_low",
            "Texture.iron_golem_cracked_none"
          ]
        }
      },
      "geometry": "Geometry.iron_golem",
      "materials": [ { "*": "Material.iron_golem" } ],
      "textures": [ "Array.cracks[math.clamp(query.health / 25, 0, 3)]" ],
      "part_visibility": [
        { "*": false },
        { "arm0": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
        { "arm1": "(query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0))" }
      ]
    },
    "controller.render.morph.iron_golem_cracks.third_person": {
      "arrays": {
        "textures": {
          "Array.cracks": [
            "Texture.iron_golem_cracked_high",
            "Texture.iron_golem_cracked_med",
            "Texture.iron_golem_cracked_low",
            "Texture.iron_golem_cracked_none"
          ]
        }
      },
      "geometry": "Geometry.iron_golem",
      "materials": [ { "*": "Material.iron_golem" } ],
      "textures": [ "Array.cracks[math.clamp(query.health / 25, 0, 3)]" ]
    },
    "controller.render.morph.iron_golem_flower": {
      "geometry": "Geometry.iron_golem_flower",
      "materials": [ { "*": "Material.iron_golem" } ],
      "textures": [ "Texture.flower" ],
      "part_visibility": [
        { "*": "query.is_powered" }
      ]
    }
  }
}
