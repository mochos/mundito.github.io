{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.morph.sheep.first_person": {
      "arrays": {
        "geometries": {
          "Array.geos": [ "Geometry.sheep", "Geometry.sheep_sheared" ]
        }
      },
      "geometry": "Array.geos[query.is_sheared]",
      "materials": [ { "*": "Material.sheep" } ],
      "textures": [ "Texture.sheep" ],
      "part_visibility": [
        { "*": false },
        { "leg2": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
        { "leg3": "(query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0))" }
      ],
      "color": {
        "r": "variable.color.r",
        "g": "variable.color.g",
        "b": "variable.color.b",
        "a": 1.0
      }
    },
    "controller.render.morph.sheep.third_person": {
      "arrays": {
        "geometries": {
          "Array.geos": [ "Geometry.sheep", "Geometry.sheep_sheared" ]
        }
      },
      "geometry": "Array.geos[query.is_sheared]",
      "materials": [ { "*": "Material.sheep" } ],
      "textures": [ "Texture.sheep" ],
      "color": {
        "r": "variable.color.r",
        "g": "variable.color.g",
        "b": "variable.color.b",
        "a": 1.0
      }
    }
  }
}
