{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.morph.strider.first_person": {
		"arrays": {
	        "textures": {
          		"Array.base": [
          			"Texture.strider",
          			"Texture.strider_saddled"
          		],
          		"Array.suffocated": [
          			"Texture.strider_suffocated",
          			"Texture.strider_suffocated_saddled"
          		]
	        }
      	},
		"geometry": "Geometry.strider",
		"materials": [
			{ "*": "Material.strider" }
		],
		"textures": [
			"query.is_shaking ? Array.suffocated[query.is_saddled] : Array.base[query.is_saddled]"
		],
		"part_visibility": [
			{ "*": false },
			{ "right_leg": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
			{ "left_leg3": "(query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0))" }
		]
    },
    "controller.render.morph.strider.third_person": {
		"arrays": {
	        "textures": {
          		"Array.base": [
          			"Texture.strider",
          			"Texture.strider_saddled"
          		],
          		"Array.suffocated": [
          			"Texture.strider_suffocated",
          			"Texture.strider_suffocated_saddled"
          		]
	        }
      	},
		"geometry": "Geometry.strider",
		"materials": [
			{ "*": "Material.strider" }
		],
		"textures": [
			"query.is_shaking ? Array.suffocated[query.is_saddled] : Array.base[query.is_saddled]"
		]
    }
  }
}
