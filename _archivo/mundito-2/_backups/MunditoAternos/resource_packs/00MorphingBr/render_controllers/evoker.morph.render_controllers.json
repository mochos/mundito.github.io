{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.morph.evoker.first_person": {
      "geometry": "Geometry.evoker",
      "materials": [ { "*": "Material.evoker" } ],
      "part_visibility": [
        { "*": false },
        { "rightArm": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
        { "leftArm": "(query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0))" }
      ],
      "textures": [ "Texture.evoker" ]
    },
    "controller.render.morph.evoker.third_person": {
      "geometry": "Geometry.evoker",
      "materials": [ { "*": "Material.evoker" } ],
      "part_visibility": [
        { "*": true },
        { "arms": "!(query.is_using_item && query.is_item_name_any('slot.weapon.mainhand', 'morph:evoker_fang'))" },
        { "leftarm": "(query.is_using_item && query.is_item_name_any('slot.weapon.mainhand', 'morph:evoker_fang'))" },
        { "rightarm": "(query.is_using_item && query.is_item_name_any('slot.weapon.mainhand', 'morph:evoker_fang'))" }
      ],
      "textures": [ "Texture.evoker" ]
    }
  }
}
