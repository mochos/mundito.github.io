{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.morph.creeper_armor.first_person": {
      "geometry": "Geometry.creeper_charged",
      "part_visibility": [
        { "*": false },
        { "leg2": "query.is_powered && (query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet')" },
        { "leg3": "query.is_powered && ((query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0)))" }
      ],
      "materials": [ { "*": "Material.creeper_charged" } ],
      "textures": [ "Texture.creeper_charged" ],
      "overlay_color": {
          "r": 1.0,
          "g": 1.0,
          "b": 1.0,
          "a": 1.0
      },
      "uv_anim": {
          "offset": [ "(query.is_powered) ? (Math.floor(query.life_time * 20.0) + query.frame_alpha) * 0.01 : 0.0", 
                      "(query.is_powered) ? (Math.floor(query.life_time * 20.0) + query.frame_alpha) * 0.01 : 0.0" ],
          "scale": [ 1.0, 1.0 ]
      },
      "light_color_multiplier": 0.5,
      "ignore_lighting" : true
    },
    "controller.render.morph.creeper_armor.third_person": {
      "geometry": "Geometry.creeper_charged",
      "part_visibility": [
        { "*": "query.is_powered" }
      ],
      "materials": [ { "*": "Material.creeper_charged" } ],
      "textures": [ "Texture.creeper_charged" ],
      "overlay_color": {
          "r": 1.0,
          "g": 1.0,
          "b": 1.0,
          "a": 1.0
      },
      "uv_anim": {
          "offset": [ "(query.is_powered) ? (Math.floor(query.life_time * 20.0) + query.frame_alpha) * 0.01 : 0.0", 
                      "(query.is_powered) ? (Math.floor(query.life_time * 20.0) + query.frame_alpha) * 0.01 : 0.0" ],
          "scale": [ 1.0, 1.0 ]
      },
      "light_color_multiplier": 0.5,
      "ignore_lighting" : true
    }
  }
}
