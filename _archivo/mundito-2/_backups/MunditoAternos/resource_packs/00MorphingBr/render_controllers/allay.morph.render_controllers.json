{
	"format_version": "1.8.0",
	"render_controllers": {
		"controller.render.morph.allay.first_person": {
			"geometry": "Geometry.allay",
			"materials": [ { "*": "Material.allay" } ],
			"textures": [ "Texture.allay" ],
			"ignore_lighting": true,
			"part_visibility": [
				{ "*": false },
				{ "right_arm": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
				{ "left_arm": "(query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0))" }
			]
		},
		"controller.render.morph.allay.third_person": {
			"geometry": "Geometry.allay",
			"materials": [ { "*": "Material.allay" } ],
			"textures": [ "Texture.allay" ],
			"ignore_lighting": true
		}
	}
}
