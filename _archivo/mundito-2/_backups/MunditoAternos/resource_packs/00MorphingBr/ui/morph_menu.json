{
  "namespace": "morph_menu",

  "main_screen_content": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
        {
          "server_form_factory": {
              "type": "factory",
              "control_ids": {
              "long_form": "@morph_menu.long_form",
              "custom_form": "@server_form.custom_form"
          }
        }
      }
    ]
  },

  "dynamic_dialog_screen@common.base_screen": {
    "type": "screen",
    "$screen_content": "morph_menu.screen_content",
    "$header_safezone_control": "common_store.store_top_bar_filler",
    "$header_bar_control": "common_store.store_top_bar",
    "$is_full_screen_layout": true
  },

  "screen_content": {
    "type": "panel",
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "size": [ "100%", "100%" ],
          "controls": [
            {
              "content_panel": {
                "type": "panel",
                "size": [ "100%", "fill" ],
                "controls": [
                  {
                    "common_panel@common.fullscreen_header": {
                      "$dialog_background": "dialog_background_hollow_3"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "title_label@common_dialogs.title_label": {
          "$title_offset": [ 0, 6 ]
        }
      }
    ]
  },

  "long_form@morph_menu.dynamic_dialog_screen": {
    "$title_panel": "common_dialogs.standard_title_label",
    "$title_size": [ "100% - 14px", 10 ],
    "size": ["100%", "100%"],
    "$text_name": "#title_text",
    "$title_text_binding_type": "none",
    "$child_control": "morph_menu.long_form_panel",
    "layer": 2
  },

  "long_form_panel" : {
    "type": "stack_panel",
    "size": ["100%", "100%"],
    "orientation": "vertical",
    "layer": 1,
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      
      {
        "scrolling_panel@common.scrolling_panel": {
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "$show_background": false,
          "size": [ "100%", "100%" ],
          "$scrolling_content": "morph_menu.long_form_scrolling_content",
          "$scroll_size": [ 5, "100% - 4px" ],
          "$scrolling_pane_size": [ "100% - 4px", "100% - 2px" ],
          "$scrolling_pane_offset": [ 2, 0 ],
          "$scroll_bar_right_padding_size": [ 0, 0 ]
        }
      }
    ]
  },

  "long_form_scrolling_content": {
    "type": "stack_panel",
    "size": [ "100% - 4px", "100%c" ],
    "orientation": "vertical",
    "anchor_from": "top_left",
    "anchor_to": "top_left",

    "controls": [
      {
        "padding": {
          "type": "panel",
          "size": [ "100%", 4 ]
        }
      },
      {
        "wrapping_panel": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "long_form_dynamic_buttons_panel@morph_menu.long_form_dynamic_buttons_panel": {}
            }
          ]
        }
      }
    ]
  },

  "long_form_dynamic_buttons_panel": {
    "type": "grid",
    "size": ["100%", "100%c"],
    "grid_item_template": "morph_menu.dynamic_button",
    "grid_rescaling_type": "horizontal",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",

    "collection_name": "form_buttons",
    "bindings": [
      {
        "binding_name": "#form_button_length",
        "binding_name_override": "#maximum_grid_items"
      }
    ]
  },

  "dynamic_button": {
    "type": "panel",
    "size": [64, 64],
    "controls":[
      {
        "panel_name": {
          "type": "panel",
          "layer": 9,
          "size": [32, "100%c"],
          "offset": [0, -10],
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "image",
              "resolve_sibling_scope": true,
              "source_property_name": "(not (#texture = ''))",
              "target_property_name": "#visible"
            }
          ],

          "controls": [
            {
              "image": {
                "type": "image",
                "size": [32, 32],
                "offset": [0, 0],
                "bindings":[
                  {
                    "binding_name": "#form_button_texture",
                    "binding_name_override": "#texture",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_name": "#form_button_texture_file_system",
                    "binding_name_override": "#texture_file_system",
                    "binding_type": "collection",
                    "binding_collection_name": "form_buttons"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "progress@progress.progress_loading_bars": {
                "size": [32, 4],
                "offset": [0, 16],
                "bindings":[
                  {
                    "binding_type": "view",
                    "source_control_name": "image",
                    "resolve_sibling_scope": true,
                    "source_property_name": "(#texture = 'loading')",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "form_button@common_buttons.light_text_button": {
          "$default_button_texture": "textures/ui/hud_tip_text_background",
          "$hover_button_texture": "textures/ui/hud_tip_text_background",
          "$pressed_button_texture": "textures/ui/hud_tip_text_background",
          "$locked_button_texture": "textures/ui/hud_tip_text_background",
          "$border_visible": false,

          "$default_content_alpha": 0.5,
          "$hover_content_alpha": 0.75,
          "$pressed_alpha": 1.0,
          "$locked_alpha": 0.25,
          "$default_button_alpha": 0.5,
          "$default_hover_alpha": 0.75,
          "$default_pressed_alpha": 1.0,
          "$default_locked_alpha": 0.25,

          "$default_text_color": "$dark_button_default_text_color",
          "$hover_text_color": "$dark_button_hover_text_color",
          "$pressed_text_color": "$dark_button_pressed_text_color",
          "$locked_text_color": "$dark_button_locked_text_color",

          "$pressed_button_name": "button.form_button_click",
          "size": [ 64, 64 ],
          "$button_text": "#form_button_text",
          "$button_text_binding_type": "collection",
          "$button_text_grid_collection_name": "form_buttons",
          "$button_text_max_size": [ "100%", 20 ],
          "$new_ui_label_offset": [ 0, 20 ],
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "form_buttons"
            }
          ]
        }
      }
    ]
  }
}