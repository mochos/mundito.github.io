command /misionterminada <text> <text> <player>:
	permission: skript.eventos
	permission message: &cNo tienes permiso para usar esta función.
	executable by: players and console
	trigger:
		set {_conteo} to yaml value "%arg 1%.%arg 2%.%arg 3%" from file "../variables/misiones.yml"
		wait 1 tick
		add 1 to {_conteo}
		wait 1 tick
		set yaml value "%arg 1%.%arg 2%.%arg 3%" from file "../variables/misiones.yml" to {_conteo}
		if "%arg 1%" doesn't contain "Habichuela" or "Dianita" or "fuente":
			broadcast " &a&l%arg 3% &aacaba de pasar una misión de &a&l%arg 1%&a."
		stop

