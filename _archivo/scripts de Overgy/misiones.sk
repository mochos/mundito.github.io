# Misión Mina (zona)
on region enter:
	wait 1 tick
	if "%region at player%" contains "minaMission":
		message "&c&lEntrando a la mina infestada..." to player

on command:
	player is in "tierramedia"
	if "%region at player%" contains "minaMission":
		if player has permission "skript.admin":
			stop
		if command is not "escapar", "m" or "msg":
			message "&c&l¡Estás atrapado aquí!, para intentar escapar, usa /escapar" to player
			cancel event

command /escapar:
	trigger:
		wait 1 tick
		if "%region at player%" contains "minaMission":
			message " " to player
			message "&aTratando de escapar..." to player
			message " " to player
			wait 20 ticks
			chance of 0.4:
				teleport the player to location (-81 , 42, 741) in world "tierramedia"
				message " " to player
				message "&aHas logrado escapar." to player
				message " " to player
				stop
			message " " to player
			message "&c&l¡No has podido escapar, inténtalo de nuevo!" to player
			message " " to player
		# else:
			# cancel event
			