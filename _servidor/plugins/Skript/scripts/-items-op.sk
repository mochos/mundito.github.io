#Abrir cajero
on rightclick on sign:
    if line 2 of event-block is "&2&l[Cajero]":
        cancel event
        make player execute command "/cajero"

#Admin crear cajero
command /crearcajero:
    permission: cambio.cartel
    trigger:
        set {_target} to target block of player
        if {_target} is a sign:
            set line 2 of block at location of {_target} to "&2&l[Cajero]"
            send "&aCajero creado con éxito."
        else:
            send "&cNo estás mirando un cartel."


